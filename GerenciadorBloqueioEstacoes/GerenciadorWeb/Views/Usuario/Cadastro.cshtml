@model Modelo.Acesso.Usuario
@{
    ViewBag.Title = "Cadastro";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ID)

    <div class="container-fluid col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <h2>Usuários <small>Gerenciamento</small></h2><hr>
            </div>
            @Html.HiddenFor(model => model.ID)
            <div class="panel-body col-md-offset-3">                
                    <div class="row form-group">
                        <div class="col-md-2 text-right"><label>Usuário:</label></div>
                        <div class="col-md-9">@Html.TextBoxFor(model => model.NomeUsuario, new {@class="form-control"})</div>
                        
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2 text-right"><label>Senha:</label></div>
                        <div class="col-md-9">@Html.PasswordFor(model => model.Senha, new { @class = "form-control" })</div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2 text-right"><label>Confirmar Senha:</label></div>
                        <div class="col-md-9">@Html.PasswordFor(model => model.ConfirmarSenha, new { @class = "form-control" })</div>
                    </div>
                    <div class="row"></div>                
            </div>
        </div>
        <div class="row painel_botoes">
                <input type="submit" class="btn btn-primary" name="Salvar" value="Salvar" data-form-action='@Url.Action("Cadastro")' />
                <input type="submit" class="btn btn-default" name="Voltar" value="Voltar" data-form-action='@Url.Action("Index")' />
        </div>        
    </div>

}
