@model Modelo.Acesso.Usuario
@{
    ViewBag.Title = "Trocar Senha";
}
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ID)
    <div class="container-fluid col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <h2>Troca de Senha <small>Gerenciamento</small></h2><hr>
            </div>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)            
                <div class="panel-body col-md-offset-3">
                    <div class="row form-group">
                        <div class="col-md-2 text-right"><label>Usuário:</label></div>
                        <div class="col-md-9">@Html.TextBoxFor(model => model.NomeUsuario, new {@class="form-control"})</div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2 text-right"><label>Senha:</label></div>
                        <div class="col-md-9">@Html.TextBoxFor(model => model.Senha, new {@class = "form-control"})</div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2 text-right"><label>Nova Senha:</label></div>
                        <div class="col-md-9">@Html.PasswordFor(model => model.NovaSenha, new {@class = "form-control"})</div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-2 text-right"><label>Confirmar Senha:</label></div>
                        <div class="col-md-9">@Html.PasswordFor(model => model.ConfirmarSenha, new {@class = "form-control"})</div>
                    </div>
                    <div class="row"></div>
                </div>           
        </div>
        <div class="row painel_botoes">
                <input type="submit" class="btn btn-primary" value="Salvar" />
                <input type="submit" class="btn btn-default" value="Voltar" />
        </div>       
    </div>
}

