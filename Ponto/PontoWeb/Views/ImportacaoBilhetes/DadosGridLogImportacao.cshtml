@model List<Modelo.LogImportacaoAFD>
@using System.Web.Optimization

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string nomeTabela = "tbLogImportacaoAFD";
    string acao = String.Format("DadosGridLogImportacao?dataIni={0}&dataFim={1}", ViewBag.dataIni, ViewBag.dataFim);
    Layout = null;
}

<div style="margin-top:0">
    <div class="panel panel-default" style="padding:0">
        <div class="panel-heading">
            @Html.ActionLink("X", "Index", "Home", null, new { @class = "close" })
            <h3 class="panel-title titulo-pagina">Arquivos Importados</h3>
        </div>
        <div class="panel-body panelConteudo" id="panelBodyFixo">
            @Html.ValidationSummary(true)
            <div class="row">
               @* @Html.GridFor(nomeTabela, Model.GetType(), false, "ImportacaoBilhetes", acao)*@
 
                <table id="tbSel" class="table table-striped table-bordered table-hover table-condensed nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Data/Hora Importação</th>
                            <th>Arquivo</th>
                            <th>Data Início</th>
                            <th>Data Fim</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="@item.Id">
                                <td>@item.DataImportacao</td>
                                <td>@item.nomeArquivo</td>
                                <td>@Html.Encode(String.Format("{0:dd/MM/yyyy}", item.DataInicio))</td>
                                <td>@Html.Encode(String.Format("{0:dd/MM/yyyy}", item.DataFim))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-4 center-block">
                    <div style="text-align: left">
                        <a href="#" id="btLog" class="btn btn-info"><span class="glyphicon glyphicon-info-sign"></span>&nbsp;Log</a>
                    </div>
                 </div>

                <div class="col-xs-8 center-block">
                    <div style="text-align: right">
                        <a href="#" id="btExcluir" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>&nbsp;Excluir Arquivo Importado</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var nomeTabela = "#" + '@nomeTabela';
    var controller = 'LogImportacaoAFD';
    $(document).ready(function () {
        cwk_EventoClickCadastroExcluir('#btExcluir', 'Excluir', controller, nomeTabela, 'Arquivo de importação excluído com sucesso.');
    });
</script>

