@model PontoWeb.Controllers.Teste
@{
    ViewBag.Title = "Testar Desenvolvimento";
}

@using (Html.BeginForm())
{
    <div class="panel panel-default" style="padding:0; margin-bottom:0px">
        <div class="panel-heading salvando">
            @Html.ActionLink("X", "Index", "Home", null, new { @class = "close" })
            <h3 class="panel-title titulo-pagina">Cadastro de Alertas</h3>
        </div>
        <div class="panel-body  panelConteudo" id="panelBodyFixo">
            <div class="row">
                <div class="col-md-8">
                    @Html.TextBoxForDateTime(m => m.UltimaExecucao)
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    @Html.TextBoxForDate(m => m.DataExecucao)
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    @Html.TextBoxForTime(m => m.Hora)
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">

            </div>
        </div>
    </div>
}
