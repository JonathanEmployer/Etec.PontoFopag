@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="modal" id="divModalProgress" tabindex="" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" accesskey="" data-keyboard="false" data-backdrop="static" style="z-index:99999999;margin-top:100px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" style="padding:0">
                <div class="panel panel-primary" style="padding:0; margin:0;">
                    <div class="panel-heading salvando">
                        <h3 class="panel-title" style="background: url('../../Content/img/circulosLoadingPrimary.GIF') no-repeat; background-position:68px; font-weight:bold;">Aguarde</h3>
                    </div>
                    <div class="panel-body panelConteudo">
                        <div>
                            <button id="btnProgresso" class="btn btn-default" style="display:none">Mostra progresso</button>
                        </div>
                        <div id="progressDisplay">
                            <div class="progress" id="progresssBar">
                                <div id="progresssBarValue" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                </div>
                            </div>
                            <label class="text-info" id="caixaTexto">Processando requisição</label>
                        </div>

                        <div id="completedDisplay" style="display:none">
                            <span class="glyphicon glyphicon-check"></span> Marcações Reprocessadas
                        </div>
                        <div>
                            <h5 class="text-center text-warning">Quando o processo for concluído essa tela será fechada, por favor aguarde!</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>