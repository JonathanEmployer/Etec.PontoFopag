@model IEnumerable<Modelo.TipoVinculo>
@using System.Web.Optimization

@{
    ViewBag.Title = "TipoVinculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="divCenterMedio">
    <div class="panel panel-default" style="padding:0">
        <div class="panel-heading">
            @Html.ActionLink("X", "Index", "Home", null, new { @class = "close" })
            <h3 class="panel-title titulo-pagina">TipoVinculo</h3>
        </div>
        <div class="panel-body panelConteudo" id="panelBodyFixo">
            @Html.ValidationSummary(true)
            <div class="div_table_highlight">
                <table id="tb">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Descrição</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="@item.Id">
                                <td>@item.Codigo</td>
                                <td>@item.Descricao</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-12 center-block">
                    <div style="text-align: right">
                        <a href="#" id="btConsultar" class="btn btn-info"><span class="glyphicon glyphicon-search"></span>&nbsp;Consultar</a>
                        <a href="#" id="btIncluir" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;Adicionar</a>
                        <a href="#" id="btAlterar" class="btn btn btn-primary"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Alterar</a>
                        <a href="#" id="btExcluir" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>&nbsp;Excluir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var oTb = cwk_MontarDataTableTheme('#tb', 'TipoVinculo', false, "", "");
    jQuery(document).ready(function () {
        cwk_EventoDbClickEditar('Alterar', 'TipoVinculo', '#tb', oTb);
        cwk_EventoClickSelecionarSingle('#tb');
        cwk_EventoClickCadastroAdicionar('#btIncluir', 'Cadastrar', 'TipoVinculo');
        cwk_EventoClickCadastroAlterar('#btAlterar', 'Alterar', 'TipoVinculo', oTb);
        cwk_EventoClickCadastroAlterar('#btConsultar', 'Consultar', 'TipoVinculo', oTb);
        cwk_EventoClickCadastroExcluir('#btExcluir', 'Excluir', 'TipoVinculo', oTb, 'TipoVinculo excluída com sucesso.');
    });
</script>
