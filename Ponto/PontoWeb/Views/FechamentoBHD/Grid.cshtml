@model Modelo.FechamentoBHD
@using System.Web.Optimization

@{
    ViewBag.Title = "Fechamento por Funcionário";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string nomeTabela = "tbFunc";
}

<div class="divCenterGrande" style="margin-top:-10px">
    <div class="panel panel-default" style="padding:0">
        <div class="panel-heading">
            @Html.ActionLink("X", "Grid", "FechamentoBH", null, new { @class = "close" })
            <h3 class="panel-title titulo-pagina">@ViewBag.Title</h3>
        </div>
        <div class="panel-body panelConteudo" id="panelBodyFixo">
            @Html.ValidationSummary(true)
            <div class="row">
                @Html.GridFor(nomeTabela, (new Modelo.Proxy.PxyFechamentoBHD()).GetType(), false, "FechamentoBHD", "DadosGrid/" + Model.Idfechamentobh)
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-12 center-block">
                    <div style="text-align: right">
                        <a href="#" id="btAlterar" class="btn btn btn-primary"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Alterar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var nomeTabela = "#" + '@nomeTabela';
    jQuery(document).ready(function () {
        cwk_EventoDbClickEditar('Alterar', 'FechamentoBHD', nomeTabela);
        cwk_EventoClickCadastroAlterar('#btAlterar', 'Alterar', 'FechamentoBHD', nomeTabela);
    });
</script>
