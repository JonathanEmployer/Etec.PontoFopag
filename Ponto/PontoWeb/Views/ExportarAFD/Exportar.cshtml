@model Modelo.ExportarAFD
@{
    ViewBag.Title = "Exportar AFD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Exportar", "ExportarAFD", FormMethod.Post, new { id = "FormExportar" }))
{
    
    @Html.HiddenFor(model => model.IdRep, new { id = "id" });
    
    
    <div class="divCenterPequeno">
        @*Conteúdo da tela, onde está localizado os campos com informações do REP e a Data Inicial e Data Final*@
        <div class="panel panel-default" style="padding:0">
            <div class="panel-heading salvando">
                @Html.ActionLink("X", "Index", "Home", null, new { @class = "close"})
                <h3 class="panel-title titulo-pagina">@ViewBag.Title</h3>
            </div>
            <div class="panel-body panelConteudo">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumSerie, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.NumSerie, new { @class = "form-control input-sm", id = "NumSerie", @disabled = true })
                        </div>
                        @Html.ValidationMessageFor(model => model.NumSerie)
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NumRelogio, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.NumRelogio, new { @class = "form-control input-sm", id = "NumRelogio", @disabled = true })
                        </div>
                        @Html.ValidationMessageFor(model => model.NumRelogio)
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CodLocal, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.CodLocal, new { @class = "form-control input-sm", id = "CodLocal", @disabled = true })
                        </div>
                        @Html.ValidationMessageFor(model => model.CodLocal)
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NomeRelogio, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.NomeRelogio, new { @class = "form-control input-sm", id = "NomeRelogio", @disabled = true })
                        </div>
                        @Html.ValidationMessageFor(model => model.NomeRelogio)
                    </div>

                </div>
                @Html.ValidationMessage("CustomError")
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DataInicial, new { @class = "control-label label-sm" })
                            <div class="input-group input-group-sm" onkeypress="dataKeypress('#DataInicial')">
                                @Html.TextBoxFor(model => model.DataInicial, new { @class = "form-control input-sm MascDate datepickerpt", id = "DataInicial" })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" id="btnDataInicial" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.DataInicial)
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DataFinal, new { @class = "control-label label-sm" })
                            <div class="input-group input-group-sm" onkeypress="dataKeypress('#DataFinal')">
                                @Html.TextBoxFor(model => model.DataFinal, new { @class = "form-control input-sm MascDate datepickerpt", id = "DataFinal" })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" id="btnDataFinal" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.DataInicial)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.Partial("../JobManager/JobView")
                    </div>
                </div>
            </div>
        </div>
        @*Rodapé da tela, onde está localizado os botões*@
        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-12 center-block">
                    <div style="text-align: right">
                        <div class="col-xs-5 pull-right" style="padding:0px;">
                            <button type="submit" id="btnExp" title="Gerar Arquivo" class="btn btn-success">
                                <span class="glyphicon glyphicon-save"></span> Baixar Arquivo
                            </button>
                            <a class="btn btn-danger"
                               href="@Url.Action("Index", "Home")">
                                <span class="glyphicon glyphicon-remove salvando"></span> Cancelar
                           </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

