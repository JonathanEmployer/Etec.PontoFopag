
@model IEnumerable<Modelo.LocalizacaoRegistroPonto>
@using System.Web.Optimization

@{
    ViewBag.Title = "Localização do Registro de Ponto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="divCenterMedio">
    <div class="panel panel-default" style="padding:0">
        <div class="panel-heading">
            @Html.ActionLink("X", "Index", "Home", null, new { @class = "close" })
            <h3 class="panel-title titulo-pagina">Localização do Registro de Ponto</h3>
        </div>
        <div class="panel-body panelConteudo" id="panelBodyFixo">
            @Html.ValidationSummary(true)
            <div class="div_table_highlight">
                <table id="tb">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>@Html.DisplayNameFor(x => x.FirstOrDefault().IdBilhetesImp)</th>
<th>@Html.DisplayNameFor(x => x.FirstOrDefault().IpPublico)</th>
<th>@Html.DisplayNameFor(x => x.FirstOrDefault().IpInterno)</th>
<th>@Html.DisplayNameFor(x => x.FirstOrDefault().X_FORWARDED_FOR)</th>
<th>@Html.DisplayNameFor(x => x.FirstOrDefault().Latitude)</th>
<th>@Html.DisplayNameFor(x => x.FirstOrDefault().Longitude)</th>
<th>@Html.DisplayNameFor(x => x.FirstOrDefault().Browser)</th>
<th>@Html.DisplayNameFor(x => x.FirstOrDefault().BrowserVersao)</th>
<th>@Html.DisplayNameFor(x => x.FirstOrDefault().BrowserPlatform)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="@item.Id">
                                <td>@item.Codigo</td>
                                <td>@item.IdBilhetesImp</td>
<td>@item.IpPublico</td>
<td>@item.IpInterno</td>
<td>@item.X_FORWARDED_FOR</td>
<td>@item.Latitude</td>
<td>@item.Longitude</td>
<td>@item.Browser</td>
<td>@item.BrowserVersao</td>
<td>@item.BrowserPlatform</td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-12 center-block">
                    <div style="text-align: right">
                        <a href="#" id="btConsultar" class="btn btn-info"><span class="glyphicon glyphicon-search"></span>&nbsp;Consultar</a>
                        <a href="#" id="btIncluir" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;Adicionar</a>
                        <a href="#" id="btAlterar" class="btn btn btn-primary"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Alterar</a>
                        <a href="#" id="btExcluir" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>&nbsp;Excluir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var oTb = cwk_MontarDataTableTheme('#tb', '@ViewBag.Title', false, "", "");
    jQuery(document).ready(function () {
        var controller = 'LocalizacaoRegistroPonto';
        cwk_EventoDbClickEditar('Alterar', controller, '#tb', oTb);
        cwk_EventoClickSelecionarSingle('#tb');
        cwk_EventoClickCadastroAdicionar('#btIncluir', 'Cadastrar', controller);
        cwk_EventoClickCadastroAlterar('#btAlterar', 'Alterar', controller, oTb);
        cwk_EventoClickCadastroAlterar('#btConsultar', 'Consultar', controller, oTb);
        cwk_EventoClickCadastroExcluir('#btExcluir', 'Excluir', controller, oTb, 'Localização do Registro de Ponto excluída com sucesso.');
    });
</script>

