@using PontoWeb.Utils
@using System.Web.Optimization
@model PontoWeb.Models.UsuarioLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_layoutLogin.cshtml";
}
<!--[if gte IE 9]>
<style type="text/css">.cwork-formBg {filter: none;}</style><![endif]-->
<link href="~/Content/footerBottom.css" rel="stylesheet" />
<link href="~/Content/modal_mudancas.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/Landing/font-awesome-4.3.0/css/font-awesome.min.css">
<div id="aw_cG9udG9mb3BhZy5jb20uYnI="></div>
    <div class="divback geral">
        <div id="wrap">
            <div class="container content">
                <div class="row">
                    <div class="col-md-5 cwork-logo hidden-sm hidden-xs hidden-md">
                        <img class="img-responsive" src="~/Content/img/cwork-logo.png">
                    </div>
                    <div class="col-md-4 cwork-form">
                        <img class="img-responsive" src="~/Content/img/cwork-logo-form.png">
                        @using (Html.BeginForm())
                        {
                            @Html.HiddenFor(model => model.ReturnURL)
                            <form role="form" action="#">
                                <div class="form-group">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-addon" style="padding:6px 12px"><span class="fa fa-user" aria-hidden="true"></span></span>
                                    @Html.TextBoxFor(model => model.login, new { @class = "form-control", @placeholder = "Usuário ou E-mail", @autofocus = "autofocus", autocomplete = "off" })
                                </div>
                                    @Html.ValidationMessageFor(model => model.login, null, new { @class = "label cwork-label-erro" })
                                </div>
                                <div class="form-group">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-addon" style="padding:6px 10px"><span class="fa fa-key" aria-hidden="true"></span></span>
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Senha", autocomplete = "off" })
                                </div>
                                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "label cwork-label-erro" })
                                </div>

                            @if (ViewBag.Validar > 0)
                            {
                                <div id="divCaptcha">
                                    @Html.Partial("Captcha")
                                </div>
                            }
                            <button type="submit" class="btn btn-default btn-lg btn-block">Entrar</button>
                                @ViewBag.resultSucess
                                <label class="label cwork-label-erro">@ViewBag.resultError</label>

                            </form>
                        }
                    </div>
                </div>
            </div>
        
        </div>
        <div id="footer" class="footer hidden-xs hidden-sm">
            @Html.TipoServidor()
            <div class="container">
                <div class="row">
                   <div class="col-md-6 logo-footer">
                       <div class="col-md-4" style="padding-top:6px"><img class="img-responsive" src="~/Content/img/logo_site_blindado.png" /></div>
                       <div class="col-md-8 social-footer" style="padding-left:0">
                           <ul>
                               <li class="employer">O Pontofopag é um site seguro</li>
                           </ul>
                       </div>
                   </div>
                    
                   <div class="col-md-3 link-footer">
                       <ul>
                           <li><a href="http://www.facebook.com/Meuholerite" target="_blank" title="Facebook"><i class="fa fa-facebook fa-fw fa-2x"></i></a></li>
                           <li><a href="https://www.youtube.com/user/EmployerOrganizacao" title="YouTube" target="_blank"><i class="fa fa-youtube fa-fw fa-2x" style="color:#fff"></i></a></li>
                       </ul>                     
                    </div>
                    <div class="col-md-3 social-footer">
                        <ul>
                            <li class="employer">© 2016 - Employer</li>
                        </ul> 
                   </div>
                </div>
            </div> 
        </div>
    </div>
<script>
