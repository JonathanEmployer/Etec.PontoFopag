@model Modelo.UsuarioPontoWeb
@{
    ViewBag.Title = "Cadastrar Usuário";
}
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id, new { id = "idUsuario" });
    @Html.HiddenFor(model => model.Incdata);
    @Html.HiddenFor(model => model.Inchora);
    @Html.HiddenFor(model => model.Incusuario);
    @Html.HiddenFor(model => model.Altdata);
    @Html.HiddenFor(model => model.Althora);
    @Html.HiddenFor(model => model.Altusuario);
    @Html.HiddenFor(model => model.PasswordSalt);
    @Html.HiddenFor(model => model.Password);
    @Html.HiddenFor(model => model.UltimoAcesso);
    @Html.HiddenFor(model => model.ConnectionString);
    @Html.HiddenFor(model => model.idUsuarioCentralCliente);

    <div class="divCenterMedio">
        <div class="panel panel-default" style="padding:0; margin-bottom:0px;">
            <div class="panel-heading salvando">
                @Html.ActionLink("X", "Grid", "Usuario", null, new { @class = "close" })
                <h3 class="panel-title titulo-pagina">@ViewBag.Title</h3>
            </div>
            <div class="panel-body panelConteudo" id="panelBodyFixodivCenter">
                @Html.ValidationMessage("CustomError")
                <div class="row">
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Codigo, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Codigo)
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Nome)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Login, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.Login, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Login)
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Senha, new { @class = "control-label label-sm" })
                            @Html.PasswordFor(model => model.Senha, new { @class = "form-control input-sm", value = Model.Senha })
                            @Html.ValidationMessageFor(model => model.Senha)
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="checkbox" style="padding-top:15px; padding-bottom:0">
                            <label>
                                @Html.CheckBoxFor(model => model.Ativo, new { id = "Ativo" })
                                @Html.LabelFor(model => model.Ativo, new { @class = "control-label label-sm", @for = "Ativo" })
                                @Html.ValidationMessageFor(model => model.Ativo)
                            </label>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label label-sm" })
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.SenhaEmail, new { @class = "control-label label-sm" })
                                @Html.PasswordFor(model => model.SenhaEmail, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.SMTP, new { @class = "control-label label-sm" })
                                @Html.TextBoxFor(model => model.SMTP, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Porta, new { @class = "control-label label-sm" })
                                @Html.TextBoxFor(model => model.Porta, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="checkbox" style="padding-top:15px; padding-bottom:0">
                                <label>
                                    @Html.CheckBoxFor(model => model.SSL, new { id = "BSSL" })
                                    @Html.LabelFor(model => model.SSL, new { @class = "control-label label-sm", @for = "BSSL" })
                                    @Html.ValidationMessageFor(model => model.SSL)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default" id="pnlTipoSelecao">
                            <div class="panel-heading" style="padding-top:0; padding-bottom:0">
                                <div class="row">
                                    <div class="col-md-12">
                                        @Html.Label("Informações adicionais para REP's Homologados pelo INMETRO: ", new { @class = "control-label label-sm" })
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body" style="padding-top:0; padding-bottom:0">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.LoginRep, new { @class = "control-label label-sm" })
                                        @Html.TextBoxFor(model => model.LoginRep, new { @class = "form-control input-sm" })
                                        @Html.ValidationMessageFor(model => model.LoginRep)
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SenhaRep, new { @class = "control-label label-sm" })
                                        @Html.PasswordFor(model => model.SenhaRep, new { @class = "form-control input-sm", value = Model.SenhaRep })
                                        @Html.ValidationMessageFor(model => model.SenhaRep)
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Cpf, new { @class = "control-label label-sm" })
                                        @Html.TextBoxFor(model => model.Cpf, new { @class = "form-control  input-sm cpf" })
                                        @Html.ValidationMessageFor(model => model.Cpf)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default" id="pnlTipoSelecao">
                            <div class="panel-heading" style="padding-top:0; padding-bottom:0">
                                <div class="row">
                                    <div class="col-md-12">
                                        @Html.Label("Utiliza Controle de Usuários Por: ", new { @class = "control-label label-sm" })
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body" style="padding-top:0; padding-bottom:0">
                                <div class="col-md-4">
                                    <div class="checkbox" style="padding-bottom:0">
                                        <label>
                                            @Html.CheckBoxFor(model => model.UtilizaControleEmpresa, new { id = "BUtilizaControleEmpresa" })
                                            @Html.Label("Empresa", new { @class = "control-label label-sm", @for = "BUtilizaControleEmpresa" })
                                            @Html.ValidationMessageFor(model => model.UtilizaControleEmpresa)
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="checkbox" style="padding-bottom:0">
                                        <label>
                                            @Html.CheckBoxFor(model => model.UtilizaControleContratos, new { id = "BUtilizaControleContratos" })
                                            @Html.Label("Contrato", new { @class = "control-label label-sm", @for = "BUtilizaControleContratos" })
                                            @Html.ValidationMessageFor(model => model.UtilizaControleContratos)
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="checkbox" style="padding-bottom:0">
                                        <label>
                                            @Html.CheckBoxFor(model => model.UtilizaControleSupervisor, new { id = "BUtilizaControleSupervisor" })
                                            @Html.Label("Supervisor", new { @class = "control-label label-sm", @for = "BUtilizaControleSupervisor" })
                                            @Html.ValidationMessageFor(model => model.UtilizaControleSupervisor)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-top:5px">
                    <div class="col-md-12">
                        <div class="panel panel-default" id="pnlTipoSelecao">
                            <div class="panel-heading" style="padding-top:0; padding-bottom:0">
                                <div class="row">
                                    <div class="col-md-12">
                                        @Html.Label("Tipo", new { @class = "control-label label-sm" })
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body" style="padding-top:0; padding-bottom:0">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group input-group-sm" style="padding-top:2px; padding-bottom:0">
                                            <div class="col-md-4">
                                                <div class="radio-inline" data-toggle="radio">
                                                    @Html.RadioButtonFor(model => model.Tipo, 0, new { id = "rdbAdm", name = "rdio" })
                                                    <label class="label-sm" for="rdbAdm">Administrador</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="radio-inline" data-toggle="radio">
                                                    @Html.RadioButtonFor(model => model.Tipo, 1, new { id = "rdbTp", name = "rdio" })
                                                    <label class="label-sm" for="rdbTp">Operador</label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="radio-inline" data-toggle="radio">
                                                    @Html.RadioButtonFor(model => model.Tipo, 2, new { id = "rdbGer", name = "rdio" })
                                                    <label class="label-sm" for="rdbGer">Gerente</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="row" style="margin:0px">
                            <div class="form-group">
                                @Html.LabelFor(model => model.GrupoUsuario, new { @class = "control-label label-sm" })
                                <div class="input-group input-group-sm">
                                    @Html.TextBoxFor(model => model.GrupoUsuario, new { @class = "form-control input-sm lkpGrupoUsuario", id = "lkpGrupoUsuario" })
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary desabilitar lkpGrupoUsuario" id="btnGrupoUsuario" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.GrupoUsuario)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.CPFUsuario, new { @class = "control-label label-sm" })
                        @Html.TextBoxFor(model => model.CPFUsuario, new { @class = "form-control input-sm cpf" })
                        @Html.ValidationMessageFor(model => model.CPFUsuario)
                    </div>
                    <div class="col-md-2">
                        <div class="checkbox" style="padding-bottom:0">
                            <label>
                                @Html.CheckBoxFor(model => model.PermissaoConcluirFluxoPnl, new { id = "BPermissaoConcluirFluxoPnlRH" })
                                @Html.Label("Permissão Concluir Fluxo Painel RH", new { @class = "control-label label-sm", @for = "BPermissaoConcluirFluxoPnlRH" })
                                @Html.ValidationMessageFor(model => model.PermissaoConcluirFluxoPnl)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-xs-12 center-block">
                        <div style="text-align: right">
                            <button type="submit" class="btn btn-success salvando">
                                <span class="glyphicon glyphicon-ok-circle"></span> &nbsp;Salvar&nbsp;&nbsp;
                            </button>
                            <a class="btn btn-danger"
                               href="@Url.Action("Grid", "Usuario")">
                                <span class="glyphicon glyphicon-remove salvando"></span> Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(":input[type='text']:enabled:visible:first").focus();
    $(document).ready(function () {

        if ($('#rdbAdm').is(':checked')) {
            modificaProperties('#lkpGrupoUsuario', true);
            modificaProperties('#btnGrupoUsuario', true);
        } else {
            modificaProperties('#lkpGrupoUsuario', false);
            modificaProperties('#btnGrupoUsuario', false);
        }

    });

    $(".lkpGrupoUsuario").bind("keydown click", function (e) {
        cwk_EventoConsultaUnico(e, this, "", "GrupoUsuario", "");
    });

    $("#rdbAdm").click(function (event) {
        if ($('#rdbAdm').is(':checked')) {
            modificaProperties('#lkpGrupoUsuario', true);
            modificaProperties('#btnGrupoUsuario', true);
        }
    });

    $("#rdbTp").click(function (event) {
        if ($('#rdbTp').is(':checked')) {
            modificaProperties('#lkpGrupoUsuario', false);
            modificaProperties('#btnGrupoUsuario', false);
        }
    });

    $("#rdbGer").click(function (event) {
        if ($('#rdbGer').is(':checked')) {
            modificaProperties('#lkpGrupoUsuario', false);
            modificaProperties('#btnGrupoUsuario', false);
        }
    });

    function modificaProperties(componente, valor) {
        $(componente).prop('disabled', valor);
        $(componente).attr('disabled', valor);
        $(componente).prop('readonly', valor);
        $(componente).attr('readonly', valor);
    }

</script>
@if (ViewBag.Consultar == 1)
{
    <script>
        $(document).ready(function () {
            $('form').find('input, textarea, button, select').attr('disabled', 'disabled');
        })
    </script>
}

@if (Model.Ativo != false || Model.Id == 0)
{
    <script>
        $('#Ativo').prop('checked', 'checked');
    </script>
}