@model Modelo.FechamentoBH
@using System.Web.Optimization

@{
    ViewBag.Title = "Fechamento do Banco de Horas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string nomeTabela = "tbFechamentoBH";
}
<div class="">
    <div class="panel panel-default" style="padding:0; margin-bottom:0px;">
        <div class="panel-heading">
            @Html.ActionLink("X", "Index", "Home", null, new { @class = "close" })
            <h3 class="panel-title titulo-pagina">@ViewBag.Title</h3>
        </div>
        <div class="panel-body panelConteudo" id="panelBodyFixo">
            @Html.ValidationSummary(true)
            <div class="row">
                @Html.GridFor(nomeTabela, Model.GetType(), false, "FechamentoBH", "DadosGrid")
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("../JobManager/JobView")
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-6">
                    <div style="text-align: left">
                        <a href="#" id="btFuncionarios" class="btn btn-primary"><span class="glyphicon glyphicon-user"></span>&nbsp;Funcionarios</a>
                        <a href="#" id="btAcerto" class="btn btn-primary"><span class="glyphicon glyphicon-list-alt"></span>&nbsp;Acerto</a>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div style="text-align: right">
                        <a href="#" id="btConsultar" class="btn btn-info"><span class="glyphicon glyphicon-eye-open"></span>&nbsp;Consultar</a>
                        <a href="#" id="btExcluir" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>&nbsp;Excluir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var nomeTabela = "#" + '@nomeTabela';
    $(document).ready(function () {
        cwk_EventoDbClickEditar('Consultar', 'FechamentoBH', nomeTabela);
        
        cwk_EventoClickCadastroAdicionar('#btAcerto', 'Cadastrar', 'FechamentoBH');
        cwk_EventoClickCadastroAlterar('#btConsultar', 'Consultar', 'FechamentoBH', nomeTabela);
        EventoClickDeletePostReturnJob('#btExcluir', 'Excluir', 'FechamentoBH', nomeTabela, 'Fechamento excluído com sucesso.');
        cwk_EventoClickCadastroAlterar('#btFuncionarios', 'Grid', 'FechamentoBHD', nomeTabela);
    });
</script>
