@model Modelo.Funcionario
@using System.Web.Optimization

@{
    ViewBag.Title = "Funcionários Excluídos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string nomeTabela = "tbFuncionario";
}
<div class="">
    <div class="panel panel-default" style="padding:0; margin-bottom:0px">
        <div class="panel-heading">
            @Html.ActionLink("X", "Index", "Home", null, new { @class = "close" })
            <h3 class="panel-title titulo-pagina">Funcionários Excluídos</h3>
        </div>
        <div class="panel-body panelConteudo" id="panelBodyFixo">
            @Html.ValidationSummary(true)
            <div class="row">
                @Html.GridFor(nomeTabela, Model.GetType(), false, "FuncionarioExcluido", "DadosGrid")
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("../JobManager/JobView")
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="center-block">
                    <div class="col-md-7">
                        <a href="#" id="btRestaurar" class="btn btn-primary"><span class="glyphicon glyphicon-refresh"></span>&nbsp; Restaurar Funcionario Excluído </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var nomeTabela = "#" + '@nomeTabela';
    $(document).ready(function () {
        cwk_EventoClickCadastroMovAjax('#btRestaurar', 'Restaurar', 'FuncionarioExcluido', nomeTabela, 'Restaurar Funcionário', 'Restaurado!', 'Funcionário restaurado com sucesso.', 'Restaurar', true)
    });
</script>
