@model Modelo.BilhetesImp

<div class="modal" style="padding-top: 150px; background: rgba(0, 0, 0, 0.4);" id="@("divBil"+@Model.Ent_sai.ToString()+@Model.Posicao)" accesskey="" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close btnModal" type="button" id="@("btndivBilClose"+@Model.Ent_sai.ToString()+@Model.Posicao)">x</button>
                <h3 class="panel-title titulo-pagina" id="@("lblPanelBil"+@Model.Ent_sai.ToString()+@Model.Posicao)">Alterando registro de Motivo</h3>
            </div>
            <div class="modal-body">
                @Html.HiddenFor(model => model.Id, new { id = "txtIdBil" + @Model.Ent_sai.ToString() + @Model.Posicao })
                @Html.HiddenFor(model => model.Incdata)
                @Html.HiddenFor(model => model.Inchora)
                @Html.HiddenFor(model => model.Incusuario)
                @Html.HiddenFor(model => model.Altdata)
                @Html.HiddenFor(model => model.Althora)
                @Html.HiddenFor(model => model.Altusuario)
                @Html.HiddenFor(m => m.Acao, new { id = "txtAcao" + @Model.Ent_sai.ToString() + @Model.Posicao })
                @Html.HiddenFor(m => m.Chave)
                @Html.HiddenFor(m => m.Data)
                @Html.HiddenFor(m => m.DsCodigo)
                @Html.HiddenFor(m => m.Ent_sai, new { id = "txtEnt_sai" + @Model.Ent_sai.ToString() + @Model.Posicao })
                @Html.HiddenFor(m => m.Func)
                @Html.HiddenFor(m => m.Hora, new { id = "txtHoraBil" + @Model.Ent_sai.ToString() + @Model.Posicao })
                @Html.HiddenFor(m => m.Idjustificativa)
                @Html.HiddenFor(m => m.idMarcacao)
                @Html.HiddenFor(m => m.Importado)
                @Html.HiddenFor(m => m.Mar_data)
                @Html.HiddenFor(m => m.Mar_hora, new { id = "txtMar_horaBil" + @Model.Ent_sai.ToString() + @Model.Posicao })
                @Html.HiddenFor(m => m.Mar_relogio)
                @Html.HiddenFor(m => m.Ordem)
                @Html.HiddenFor(m => m.Posicao, new { id = "txtPosicao" + @Model.Ent_sai.ToString() + @Model.Posicao })
                @Html.HiddenFor(m => m.Relogio, new { id = "txtRelogioBil" + @Model.Ent_sai.ToString() + @Model.Posicao })
                @Html.HiddenFor(m => m.tipoManutencao)
                @Html.HiddenFor(m => m.Codigo)
                @Html.HiddenFor(m => m.IdLancamentoLoteFuncionario)
                @Html.HiddenFor(m => m.Nsr)
                @Html.HiddenFor(m => m.IdFuncionario)
                @Html.HiddenFor(m => m.PIS)
                @Html.HiddenFor(m => m.IdRegistroPonto)
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Ocorrencia, new { @class = "control-label label-sm" })
                                    @Html.TextBoxFor(model => model.Ocorrencia, new { @class = "form-control  input-sm", id = "txtOcorrencia" + @Model.Ent_sai.ToString() + @Model.Posicao, @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.Ocorrencia)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DescJustificativa, new { @class = "control-label label-sm" })
                            <div class="input-group input-group-sm">
                                @Html.TextBoxFor(model => model.DescJustificativa, new { @class = "form-control  input-sm lkpJustificativa", id = "lkpJustificativa" + @Model.Ent_sai.ToString() + @Model.Posicao })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary desabilitar lkpJustificativa" id="@("btnJustificativa" + @Model.Ent_sai.ToString() + @Model.Posicao)" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(modal => modal.DescJustificativa)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Motivo, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.Motivo, new { @class = "form-control  input-sm editor-field", id = "txtMotivo" + @Model.Ent_sai.ToString() + @Model.Posicao })
                            @Html.ValidationMessageFor(model => model.Motivo)
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="margin-top:0">
                <button class="btn btn-sm btn-success salvando btnModal" type="button" id="@("btndivBilSalva"+@Model.Ent_sai.ToString()+@Model.Posicao)"><span class="glyphicon glyphicon-ok-circle salvando"></span> &nbsp;Salvar&nbsp;&nbsp;</button>
                <button class="btn btn-sm btn-danger btnModal salvando" type="button" id="@("btndivBilCancela"+@Model.Ent_sai.ToString()+@Model.Posicao)"><span class="glyphicon glyphicon-remove"></span>  Cancelar </button>
            </div>
        </div>
    </div>
</div>