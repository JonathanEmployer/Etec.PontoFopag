@model Modelo.Afastamento
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.Incdata)
@Html.HiddenFor(model => model.Inchora)
@Html.HiddenFor(model => model.Incusuario)
@Html.HiddenFor(model => model.Altdata)
@Html.HiddenFor(model => model.Althora)
@Html.HiddenFor(model => model.Altusuario)
@Html.HiddenFor(model => model.Acao)
@Html.HiddenFor(model => model.Codigo)
@Html.HiddenFor(model => model.CodigoOcorrencia)
@Html.HiddenFor(model => model.Dataf)
@Html.HiddenFor(model => model.Dataf_Ant)
@Html.HiddenFor(model => model.Datai)
@Html.HiddenFor(model => model.Datai_Ant)
@Html.HiddenFor(model => model.Descricao)
@Html.HiddenFor(model => model.IdDepartamento)
@Html.HiddenFor(model => model.IdDepartamento_Ant)
@Html.HiddenFor(model => model.IdEmpresa)
@Html.HiddenFor(model => model.IdEmpresa_Ant)
@Html.HiddenFor(model => model.IdFuncionario)
@Html.HiddenFor(model => model.IdFuncionario_Ant)
@Html.HiddenFor(model => model.IdOcorrencia)
@Html.HiddenFor(model => model.NaoRecalcular)
@Html.HiddenFor(model => model.Nome)
@Html.HiddenFor(model => model.NomeDepartamento)
@Html.HiddenFor(model => model.NomeEmpresa)
@Html.HiddenFor(model => model.NomeFuncionario)
@Html.HiddenFor(model => model.Tipo)
@Html.HiddenFor(model => model.Tipo_Ant)
@Html.HiddenFor(model => model.TipoAfastamentoStr)
@Html.HiddenFor(model => model.ocorrenciaAnt)
<div class="row">
    <div class="panel panel-default" style="margin-top:5px;">
        <div class="panel-heading" style="padding:5px">
            <h5 style="text-align:center; margin:0; font-weight:bold">Afastamento</h5>
        </div>
        <div class="panel-body" style="padding: 10px 10px 5px 10px">
            <div class="row">
                <div class="col-md-12">
                    <div class="row" style="margin:0px">
                        <div class="form-group">
                            <div class="input-group input-group-sm">
                                <div class="input-group-addon">@Html.LabelFor(model => model.ocorrencia, new { @class = "input-group-label" })</div>
                                @Html.TextBoxFor(model => model.ocorrencia, new { @class = "form-control lkpGen", id = "lkpOcorrencia" })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary desabilitar lkpGen" id="btnOcorrencia" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(modal => modal.ocorrencia)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="col-md-6" style="padding:0">
                        <div class="checkbox" style="margin-top:5px; margin-bottom:1px;">
                            <label>
                                @Html.CheckBoxFor(model => model.BAbonado, new { @class = "checkboxHN", id = "BAbonadoBool" })
                                @Html.LabelFor(model => model.BAbonado, new { @class = "control-label label-sm", @for = "BAbonadoBool" })
                                @Html.ValidationMessageFor(model => model.BAbonado)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6" style="padding:0">
                        <div class="checkbox" style="margin-top:5px; margin-bottom:1px;">
                            <label>
                                @Html.CheckBoxFor(model => model.BSemCalculo, new { @class = "checkboxHN", id = "BSemCalculoBool" })
                                @Html.LabelFor(model => model.BSemCalculo, new { @class = "control-label label-sm", @for = "BSemCalculoBool" })
                                @Html.ValidationMessageFor(model => model.BSemCalculo)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <button type="button" class="btn btn-sm btn-primary" id="btnAbonoParcial">Abono Parcial</button>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-sm btn-danger" id="btnExcluiAfastamento"><span class="glyphicon glyphicon-trash"></span></button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="divLoadAbonoParcialModal" class="modal" accesskey="" data-keyboard="false" data-backdrop="static">
    <div class="divModalSecundaria" style="position:absolute; width:100%; height:100%"></div>
    <div class="divCenter" style="width:480px; margin-top:20%;">
        <div class="modal-body">
            <div class="panel panel-default">
                <div class="panel-heading salvando">
                    <button type="button" class="close fecharAbonoParcialModal">X</button>
                    <h3 class="panel-title titulo-pagina">Abono Parcial</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div style="width: 156px;">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-addon">@Html.LabelFor(model => model.Horai, new { @class = "input-group-label" })</div>
                                        @Html.TextBoxFor(model => model.Horai, new { @class = "form-control input-sm timeB", id = "txtAbonoParcialDiurno", style = "font-weight: bold;", @placeholder = "--:--" })
                                    </div>
                                    @Html.ValidationMessageFor(modal => modal.Horai)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div style="width: 124px;">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-addon">@Html.LabelFor(model => model.Horaf, new { @class = "input-group-label" })</div>
                                        @Html.TextBoxFor(model => model.Horaf, new { @class = "form-control input-sm timeB", id = "txtAbonoParcialNoturno", style = "font-weight: bold;", @placeholder = "--:--" })
                                    </div>
                                    @Html.ValidationMessageFor(modal => modal.Horaf)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class ="row">
                        <div class="col-md-6">
                            <div style="width: 156px;">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-addon danger">&nbsp;&nbsp; @Html.Label(" Falta Diurna", new { @class = "input-group-label", style = "color:white" })</div>
                                        @Html.TextBox("FaltaDiurnaAbono", "", new { @class = "form-control input-sm timeB", id = "FaltaDiurnaAbono", style = "font-weight: bold", @placeholder = "--:--", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div style="width: 124px;">
                                <div class="form-group">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-addon danger">@Html.Label("Noturna", new { @class = "input-group-label", style = "color:white" })</div>
                                        @Html.TextBox("FaltaNoturnaAbono", "", new { @class = "form-control input-sm timeB", id = "FaltaNoturnaAbono", style = "font-weight: bold;", @placeholder = "--:--", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-xs-12 center-block">
                            <div style="text-align: right">
                                <button id="btnSalvarAbonoParcial" type="button" class="btn btn-success">
                                    <span class="glyphicon glyphicon-ok-circle salvando"></span> &nbsp;Salvar&nbsp;&nbsp;
                                </button>
                                <button type="button" class="btn btn-danger salvando fecharAbonoParcialModal"><span class="glyphicon glyphicon-remove"></span> Cancelar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>