@model Modelo.MudCodigoFunc
@using System.Web.Optimization

@{
    ViewBag.Title = "Mudança de Código";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string nomeTabela = "tbMudCodigoFunc";
}

<div class="">
    <div class="panel panel-default" style="padding:0;margin-bottom:0">
        <div class="panel-heading">
            @Html.ActionLink("X", "Index", "Home", null, new { @class = "close" })
            <h3 class="panel-title titulo-pagina">@ViewBag.Title</h3>
        </div>
        <div class="panel-body panelConteudo" id="panelBodyFixo">
            @Html.ValidationSummary(true)
            <div class="row">
                @Html.GridFor(nomeTabela, Model.GetType(), false, "MudCodigoFunc", "DadosGrid")
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("../JobManager/JobView")
                </div>
            </div>
        </div>

        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-12 center-block">
                    <div style="text-align: right">
                        <a href="#" id="btAlterarCodigoFunc" class="btn btn btn-primary"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Alterar Código do Funcionário</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var nomeTabela = "#" + '@nomeTabela';
    $(document).ready(function () {
        
        cwk_EventoClickCadastroAdicionar('#btAlterarCodigoFunc', 'Alterar', 'MudCodigoFunc');
    });
</script>
