@model Modelo.Alertas
@{
    ViewBag.Title = "Cadastrar Alertas";
}

<style>
    .checkbox {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>
@using (Html.BeginForm())
{
    <div>
        <div class="panel panel-default" style="padding:0; margin-bottom:0px">
            <div class="panel-heading salvando">
                @Html.ActionLink("X", "Grid", "Alertas", null, new { @class = "close" })
                <h3 class="panel-title titulo-pagina">Cadastro de Alertas</h3>
            </div>
            <div class="panel-body  panelConteudo" id="panelBodyFixo">
                @Html.HiddenFor(m => m.Tipo)
                @Html.ValidationMessage("CustomError")
                <div class="row">
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Codigo, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control  input-sm" })
                            @Html.ValidationMessageFor(model => model.Codigo)
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Descricao, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control  input-sm" })
                            @Html.ValidationMessageFor(model => model.Descricao)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ProcedureAlerta, new { @class = "control-label label-sm" })
                            @Html.DropDownListFor(x => x.ProcedureAlerta, (IEnumerable<SelectListItem>)ViewBag.AlertasDisponiveis, new { @class = "form-control input-sm", style = "height: 25px;" })
                            @Html.ValidationMessageFor(model => model.ProcedureAlerta)
                        </div>
                    </div>
                    <div class="col-md-1">
                        @Html.LabelFor(model => model.Ativo, new { @class = "control-label label-sm" })
                        <div class="form-group">
                            @Html.CheckBoxFor(model => model.Ativo)
                            @Html.ValidationMessageFor(model => model.Ativo)
                        </div>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxForDateTime(m => m.UltimaExecucao)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="panel panel-default" style="margin-bottom: 5px">
                            <div class="panel-heading">Dias para enviar alerta</div>
                            <div class="panel-body">
                                @Html.ValidationMessageFor(m => m.DiasSemanaEnvio)
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.Segunda)
                                                        @Html.DisplayNameFor(model => model.Segunda)
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.Terca)
                                                        @Html.DisplayNameFor(model => model.Terca)
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.Quarta)
                                                        @Html.DisplayNameFor(model => model.Quarta)
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.Quinta)
                                                        @Html.DisplayNameFor(model => model.Quinta)
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.Sexta)
                                                        @Html.DisplayNameFor(model => model.Sexta)
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="checkbox">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.Sabado)
                                                        @Html.DisplayNameFor(model => model.Sabado)
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="checkbox">
                                            <label>
                                                @Html.CheckBoxFor(model => model.Domingo)
                                                @Html.DisplayNameFor(model => model.Domingo)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="panel panel-default" style="margin-bottom: 5px">
                            <div class="panel-heading">Verificação</div>
                            <div class="panel-body">
                                <div class="col-md-5">
                                    <div class="row">
                                        <div class="col-md-6" style="padding-left: 15px">
                                            <div class="row">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.InicioVerificacao, new { @class = "control-label label-sm editor-label" })
                                                    @Html.TextBoxFor(model => model.InicioVerificacao, new { @class = "form-control  input-sm editor-field timeL" })
                                                    @Html.ValidationMessageFor(model => model.InicioVerificacao)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.FimVerificacao, new { @class = "control-label label-sm editor-label" })
                                                    @Html.TextBoxFor(model => model.FimVerificacao, new { @class = "form-control  input-sm editor-field timeL" })
                                                    @Html.ValidationMessageFor(model => model.FimVerificacao)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.IntervaloVerificacao, new { @class = "control-label label-sm editor-label" })
                                                    @Html.TextBoxFor(model => model.IntervaloVerificacao, new { @class = "form-control  input-sm editor-field timeL" })
                                                    @Html.ValidationMessageFor(model => model.IntervaloVerificacao)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group" id="divTolerancia">
                                                    @Html.LabelFor(model => model.Tolerancia, new { @class = "control-label label-sm editor-label" })
                                                    @Html.TextBoxFor(model => model.Tolerancia, new { @class = "form-control  input-sm editor-field timeL" })
                                                    @Html.ValidationMessageFor(model => model.Tolerancia)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.EmailUsuario, new { @class = "control-label label-sm" })
                                    @Html.TextBoxFor(model => model.EmailUsuario, new { @class = "form-control  input-sm" })
                                    @Html.ValidationMessageFor(model => model.EmailUsuario)
                                </div>
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.EmailIndividual, new { @class = "control-label label-sm" })
                                <div class="form-group">
                                    @Html.CheckBoxFor(model => model.EmailIndividual)
                                    @Html.ValidationMessageFor(model => model.EmailIndividual)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Pessoa, new { @class = "control-label label-sm" })
                            <div class="input-group input-group-sm">
                                @Html.TextBoxFor(model => model.Pessoa, new { @class = "form-control  input-sm lkpGen", id = "lkpPessoa" })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary lkpGen" id="btnPessoa" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Pessoa)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.HiddenFor(x => x.IdFuncsSelecionados)
                        @Html.HiddenFor(m => m.IdFuncsSelecionados_Ant)
                        @Html.ValidationMessageFor(x => x.IdFuncsSelecionados)
                        <div class="row">
                            @Html.GridFor("tbFun", (new Modelo.Proxy.pxyFuncionarioRelatorio()).GetType(), true, "GetFuncsRel", "GetFuns", "", "", Model.IdFuncsSelecionados, "")
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-xs-12 center-block">
                        <div class="pull-left">
                            <button id="btnDadosAdicionais" class="btn btn-primary">
                               Dados Adicionais
                            </button>
                        </div>
                        <div style="text-align: right">
                            <button type="submit" class="btn btn-success salvando">
                                <span class="glyphicon glyphicon-ok-circle"></span> &nbsp;Salvar&nbsp;&nbsp;
                            </button>
                            <a class="btn btn-danger salvando"
                               href="@Url.Action("Grid", "Alertas")">
                                <span class="glyphicon glyphicon-remove"></span> Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    var errorArray = new Array();
    $(":input[type='text']:enabled:visible:first").focus();
    $(document).ready(function () {
        lkpGenerico();
        $('#tbFun tbody').on('click', 'tr', function () {
            limpaErro("Pessoa");
        });
        //$('#UltimaExecucao').datetimepicker({
        //    locale: 'pt-BR'
        //});
        //$('#UltimaExecucao').datetimepicker({
        //    format: 'dd/MM/yyyy hh:mm:ss',
        //    language: 'en',
        //    pick12HourFormat: true
        //});
        ocultarExibirTolerancia();
    })

    $(".timeL").blur(function () {
        var valor = formataHora24($(this).val(), 2, 2);
        $(this).val(valor);
    })

    $('form').submit(function () {
        if ($(this).valid() && validaForm()) {
            return true;
        }
        return false;
    });

    function validaForm() {
        $("#IdFuncsSelecionados").val(tbFunGetSelecionado());
        if (($("#IdFuncsSelecionados").val() == null || $("#IdFuncsSelecionados").val() == '' || $("#IdFuncsSelecionados").val().length <= 0)
             && ($("#lkpPessoa").val() == '' || $("#lkpPessoa").val() == null || $("#lkpPessoa").val().length <= 0)) {
            var msgErro = 'Selecionar um supervisor ou um funcionário para ser monitorado pelo alerta';
            errorArray["Pessoa"] = msgErro;
            cwkErro(msgErro);
            $("form").validate().showErrors(errorArray);
            return false;
        }
        else {
            limpaErro("Pessoa");
            return true;
        }
    }

    $("#ProcedureAlerta").change(function() {
        ocultarExibirTolerancia();
    });

    function ocultarExibirTolerancia(){
        var alerta = $("#ProcedureAlerta").val();
        if (alerta == 'p_enviaAlertaEntradaAtrasadaV2' || alerta == 'p_enviaAlertaSaidaAntecipadaV2')
            $("#divTolerancia").removeAttr("style");
        else
            $("#divTolerancia").attr("style", "visibility: hidden;");
    }
        
</script>
@if (ViewBag.Consultar == 1)
{
    <script>
        $(document).ready(function () {
            $('form').find('input, textarea, button, select').attr('disabled', 'disabled');
        })
    </script>
}

