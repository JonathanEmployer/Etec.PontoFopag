@model Modelo.Provisorio
@{
    ViewBag.Title = "Cadastrar Provisório";
}
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id, new { id = "idProvisorio" });
    @Html.HiddenFor(model => model.Incdata);
    @Html.HiddenFor(model => model.Inchora);
    @Html.HiddenFor(model => model.Incusuario);
    @Html.HiddenFor(model => model.Altdata);
    @Html.HiddenFor(model => model.Althora);
    @Html.HiddenFor(model => model.Altusuario);
    <div class="divCenterPequeno">
        <div class="panel panel-default" style="padding:0">
            <div class="panel-heading salvando">
                @Html.ActionLink("X", "Grid", "Provisorio", null, new { @class = "close" })
                <h3 class="panel-title titulo-pagina">@ViewBag.Title</h3>
            </div>
            <div class="panel-body panelConteudo">
                @Html.ValidationMessage("CustomError")
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Codigo, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.Codigo, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Codigo)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Dsfuncionarionovo, new { @class = "control-label label-sm" })
                            @Html.TextBoxFor(model => model.Dsfuncionarionovo, new { @class = "form-control input-sm" })
                            @Html.ValidationMessageFor(model => model.Dsfuncionarionovo)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NomeFuncionario, new { @class = "control-label label-sm" })
                            <div class="input-group input-group-sm">
                                @Html.TextBoxFor(model => model.NomeFuncionario, new { @class = "form-control input-sm lkpFuncionario", id = "lkpFuncionario" })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary lkpFuncionario" id="btnFuncionario" type="button"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.NomeFuncionario)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Dt_inicial, new { @class = "control-label label-sm" })
                            <div class="input-group input-group-sm">
                                @Html.TextBoxFor(model => model.Dt_inicial, new { @class = "form-control input-sm MascDate datepickerpt", id = "Dt_inicial" })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" id="btnDataInicial" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Dt_inicial)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Dt_final, new { @class = "control-label label-sm" })
                            <div class="input-group input-group-sm">
                                @Html.TextBoxFor(model => model.Dt_final, new { @class = "form-control input-sm MascDate datepickerpt", id = "Dt_final" })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" id="btnDataFinal" type="button"><span class="glyphicon glyphicon-calendar"></span></button>
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Dt_final)
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-xs-12 center-block">
                        <div style="text-align: right">
                            <button type="submit" class="btn btn-success salvando">
                                <span class="glyphicon glyphicon-ok-circle"></span> &nbsp;Salvar&nbsp;&nbsp;
                            </button>
                            <a class="btn btn-danger"
                               href="@Url.Action("Grid", "Provisorio")">
                                <span class="glyphicon glyphicon-remove salvando"></span> Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    cwk_DataCalendario('#btnDataInicial', '#Dt_inicial');
    cwk_DataCalendario('#btnDataFinal', '#Dt_final');

    $(".lkpFuncionario").bind("keydown click", function (e) {
        cwk_EventoConsultaUnico(e, this, "", "Funcionario", "");
    });

    $(":input[type='text']:enabled:visible:first").focus();
</script>

@if (ViewBag.Consultar == 1)
{
    <script>
        $(document).ready(function () {
            $('form').find('input, textarea, button, select').attr('disabled', 'disabled');
        })
    </script>
}