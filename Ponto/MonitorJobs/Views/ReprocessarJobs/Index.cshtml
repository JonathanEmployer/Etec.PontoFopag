@model MonitorJobs.Models.ListaJobs
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reprocessar Jobs Hangfire</h2>

@if (string.IsNullOrEmpty(Model.IdsJobs))
{
    using (Html.BeginForm())
    {
        @Html.TextAreaFor(m => m.IdsJobs)
        <button type="submit"> Reprocessar</button>
        <br />
        <p><a class="btn btn-default" href="/Deletar">Deletar &raquo;</a></p>
        <button class="btn btn-danger" onclick="location.href='@Url.Action("Deletar", "ReprocessarJobs", Model)'"><span class="glyphicon glyphicon-remove"></span>&nbsp;Deletar</button>
    }
}
else
{
    <h2>Jobs Adicionados na fila para processamento: @Model.IdsJobs</h2>
}


