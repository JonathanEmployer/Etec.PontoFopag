@model RegistradorPontoWeb.Models.Comprovante

@{
    ViewBag.Title = "Validar Comprovante";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="panel panel-primary backgroud_de">
                <div class="panel-body">
                    <div class="hidden-md hidden-lg">
                        <img src="~/Content/Images/LogoPontofopag.png" class="img-responsive center-block" alt=" pontofopag registrador web" />
                    </div>

                    <h3>
                        @Html.Label("Informe a chave de segurança para validar e gerar um novo comprovante", new { @class = "control-label text-white" })
                    </h3>
                    <hr />
                    
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.ChaveSeguranca, new { @class = "form-control", @placeholder = "Chave de segurança" })
                        <div class="alert alert-danger valmsg-wrapper" role="alert">
                            @Html.ValidationMessageFor(model => model.ChaveSeguranca)
                        </div>
                    </div>
                    <hr />
                    <div>
                        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> Validar</button>
                        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Index", "Registrador")'"><span class="glyphicon glyphicon-time"></span> Registrar Ponto</button>
                    </div>
                    <div class="hidden-md hidden-lg">
                        <img src="~/Content/Images/LogoEmployer.png" class="img-responsive center-block" alt="Serviço Employer" style="padding-top:10px" />
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>
}
